<launch>
    <arg name="ns"/>
    <arg name="sim" default="false"/>
    <arg name="machine" default="$(arg ns)"/>
    <arg name="local" default="true"/>

    <machine
            name="$(arg machine)"
            address="$(arg machine).local"
            user="pi"
            env-loader="/home/pi/picar_mum/catkin_ws/env.sh"
            timeout="10"
    />

    <!-- if running on real vehicle -->
    <group unless="$(arg sim)">
         <!-- start encoder node -->
        <include file="$(find encoder)/launch/encoder_node.launch">
            <arg name="ns" value="$(arg ns)"/>
            <arg name="machine" value="$(arg machine)"/>
        </include>

        <!-- start node controlling the imu -->
        <include file="$(find imu)/launch/imu_node.launch">
            <arg name="ns" value="$(arg ns)"/>
            <arg name="machine" value="$(arg machine)"/>
        </include>

        <!-- start velocity_estimation node -->
        <remap from="velocity_estimation_node/imu" to="imu_node/imu"/>
        <remap from="velocity_estimation_node/input_encoder_data" to="encoder_node/wheel_speed"/>
        <include file="$(find velocity_estimation)/launch/velocity_estimation_node.launch">
            <arg name="ns" value="$(arg ns)"/>
            <arg name="machine" value="$(arg machine)"/>
            <arg name="local" value="$(arg local)"/>
        </include>

        <!-- start trajectory_test_node -->
        <include file="$(find race_control)/launch/trajectory_test_node.launch">
            <arg name="ns" value="$(arg ns)"/>
            <arg name="machine" value="$(arg machine)"/>
            <arg name="local" value="$(arg local)"/>
        </include>

        <!-- start velocity controller-->
        <remap from="velocity_tracking_node/velocity_estimated" to="velocity_estimation_node/velocity_estimated"/>
        <remap from="velocity_tracking_node/trajectory_data" to="trajectory_test_node/trajectory_data"/>
        <include file="$(find velocity_control_tuning)/launch/velocity_tracking_node.launch">
            <arg name="ns" value="$(arg ns)"/>
        </include>


        <!-- start node controlling the motors -->
        <remap from="motor_node/car_cmd" to="velocity_tracking_node/car_cmd"/>
        <include file="$(find motor)/launch/motor_node.launch">
            <arg name="ns" value="$(arg ns)"/>
            <arg name="machine" value="$(arg machine)"/>
        </include>
    </group>

    <!-- if running on simulated vehicle -->
    <group if="$(arg sim)">

    </group>
</launch>