<launch>
    <arg name="veh"/>
    <arg name="sim" default="false"/>

     <!-- if running on real vehicle -->
    <group unless="$(arg sim)">
        <!-- start camera_node -->
        <include file="$(find camera)/launch/camera_node.launch">
            <arg name="veh" value="$(arg veh)"/>
        </include>

        <!-- start test_extrinsics_node -->
        <include file="$(find extrinsics)/launch/test_extrinsics_node.launch">
            <arg name="veh" value="$(arg veh)"/>
        </include>
    </group>

    <!-- if running on simulated vehicle -->
    <group if="$(arg sim)">
        <arg name="intrinsics_file_name" default="simcar"/>

        <include file="$(find simulation)/launch/calibration.launch">
            <arg name="veh" value="simcar"/>
        </include>

        <!-- start test_extrinsics_node -->
        <include file="$(find extrinsics)/launch/test_extrinsics_node.launch">
            <arg name="veh" value="simcar"/>
        </include>
    </group>

</launch>