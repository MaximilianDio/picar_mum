<launch>
    <arg name="veh"/>
    <arg name="local"/>

    <!-- define the picar machine to run the remote nodes on. "veh" should be the hostname of the car -->
    <machine
            name="$(arg veh)"
            address="$(arg veh).local"
            user="pi"
            env-loader="/home/pi/picar_mum/catkin_ws/env.sh"
    />

    <!-- launch lane_control_node -->
    <group ns="$(arg veh)">
        <group if="$(arg local)">
            <node pkg="lane_control" type="lane_control_node.py" name="lane_control_node" output="screen"/>
        </group>

        <group unless="$(arg local)">
            <node machine="$(arg veh)" pkg="lane_control" type="lane_control_node.py" name="lane_control_node" output="screen"/>
        </group>
    </group>

    <!-- Subscriptions -->
    <!-- "~pose_input": picar_msgs/LanePose -->

    <!-- Publications -->
    <!-- "~car_cmd": picar_msgs/CarCmd -->

</launch>