<launch>
    <arg name="ns"/>
    <arg name="local"/>
    <arg name="machine"/>

    <arg name="config_file_name" default="$(arg ns)"/>

    <group ns="$(arg ns)">
        <group if="$(arg local)">
            <node pkg="trajectory_planner" type="trajectory_planner_node.py" name="trajectory_planner_node" output="screen">
                <param name="config_file_name" value="$(arg config_file_name)"/>
            </node>
        </group>

        <group unless="$(arg local)">
            <node machine="$(arg machine)" pkg="trajectory_planner" type="trajectory_planner_node.py" name="trajectory_planner_node" output="screen">
                <param name="config_file_name" value="$(arg config_file_name)"/>
            </node>
        </group>
    </group>

    <!-- Subscriptions -->
    <!-- "~pacemaker": std_msgs/Float32 -->
    <!-- "~obstacle_position": geometry_msgs/Point32 -->
    <!-- "~curve_point": picar_msgs/MsgCurvePoint2D -->
    <!-- "~own_velocity": std_msgs/Float32 -->

    <!-- Publications -->
    <!-- "~desired_car_command": picar_msgs/CarCmd -->

</launch>